<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilotChecklist_v1.Views.ChecklistPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked"></ToolbarItem>
        <ToolbarItem Text="Finish" Clicked="FinishChecklist_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="ChecklistCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal" Padding="0,2,0,0">
                    <CheckBox IsChecked="{Binding IsChecked}" CheckedChanged="Checkbox_Changed" Margin="15,0,0,25" />
                    <Label Text="{Binding Id}" Padding="0,6,0,0" />
                    <Label Text="-" Padding="0,6,0,0"/>
                    <Label Text="{Binding Item}" Padding="0,6,0,0"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>