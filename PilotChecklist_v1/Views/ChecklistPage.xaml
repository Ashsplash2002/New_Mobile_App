<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilotChecklist_v1.Views.ChecklistPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked"></ToolbarItem>
        <ToolbarItem Text="Finish"></ToolbarItem>
        <ToolbarItem Text="Check All" Clicked="CheckAll_Clicked"></ToolbarItem>
        <ToolbarItem Text="Uncheck All" Clicked="UncheckAll_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView x:Name="Checklist_ListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="0,2,0,0">
                            <Label Text="{Binding Id}"/>
                            <Label Text="-"/>
                            <Label Text="{Binding Item}"/>
                            <CheckBox IsChecked="{Binding IsChecked}" CheckedChanged="Checkbox_Changed" Margin="15,0,0,25"></CheckBox>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>